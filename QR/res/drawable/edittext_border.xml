<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
		<shape android:shape="rectangle">
		    <corners android:radius="5dp"/>
		    <solid android:color="@color/edittext_backgroundcolor" />
		    <stroke android:width="1dip" android:color="@color/edittext_bordercolor_focused" />
		</shape>
	</item>
<item android:state_enabled="false">
		<shape android:shape="rectangle">
		    <corners android:radius="3dp"/>
		    <solid android:color="@color/edittext_backgroundcolordisabled" />
		    <stroke android:width="1dip" android:color="@color/edittext_bordercolor" />
		</shape>
	</item>
	<item>
		<shape android:shape="rectangle">
		    <corners android:radius="3dp"/>
		    <solid android:color="@color/edittext_backgroundcolor" />
		    <stroke android:width="1dip" android:color="@color/edittext_bordercolor" />
		</shape>
	</item>
</selector>