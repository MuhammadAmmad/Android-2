<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:id="@+id/LyUST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_corners_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/mnanatablemarginbottom"
            android:layout_marginTop="2dp"
            android:background="@drawable/baslikarkaplan" >

            <TextView
                android:id="@+id/TxtOtoparkAdi"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/mnanabaslik"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Otopark Adı"
                android:textColor="@color/mnanabasliktext"
                android:textSize="@dimen/mnanabasliktext"
                android:textStyle="bold" />
        </RelativeLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/table_border_koyu" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_koyu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Kapasite"
                    android:textColor="#008000" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_koyu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Hizmet Süresi"
                    android:textColor="#008000" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/TxtOtoparkKapasite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_koyu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Yok" />

                <TextView
                    android:id="@+id/TxtOtoparkHSuresi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_koyu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Kapalı" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/table_border_koyu" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_koyu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Dolu"
                    android:textColor="#c90000" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_koyu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Boş"
                    android:textColor="#008000" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/TxtDolu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_koyu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/TxtBos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_koyu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="0" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/table_border_koyu" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_koyu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Yıkama"
                    android:textColor="@color/blue_dark" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_koyu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Otopark Tipi"
                    android:textColor="#000036" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/TxtOtoparkDurum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_koyu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Yok" />

                <TextView
                    android:id="@+id/TxtOtoparkTipi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_koyu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Kapalı" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LyORTA"
        android:layout_below="@+id/LyUST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/mnanatablemarginbottom"
            android:layout_marginTop="2dp"
            android:background="@drawable/baslikarkaplan" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/mnanabaslik"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Otopark Ücret Tarifesi"
                android:textColor="@color/mnanabasliktext"
                android:textSize="@dimen/mnanabasliktext"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LytALT"
        android:layout_below="@+id/LyORTA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/LyOrta"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="2dp" >

            <LinearLayout
                style="@style/HeaderPanel"
                android:background="@drawable/baslikarkaplan" >

                <TextView
                    style="@style/HeaderText"
                    android:layout_weight="2"
                    android:text="Açıklama" />

                <TextView
                    style="@style/HeaderText"
                    android:layout_weight="1"
                    android:text="Ücret (TL)" />
            </LinearLayout>

            <ListView
                android:id="@+id/LstVw"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="30dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>